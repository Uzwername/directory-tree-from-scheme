{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"],
      "$root/*": ["./*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/"
  ]
}